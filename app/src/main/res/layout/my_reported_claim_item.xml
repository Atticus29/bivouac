<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/swarmImageMyReportedSwarms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bee" />

        <TextView
            android:id="@+id/timeStampTextViewMyReportedSwarms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reported: "
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/swarmImageMyReportedSwarms"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/claimantTextViewMyReportedSwarms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Claimed by: hasn't been claimed yet"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeStampTextViewMyReportedSwarms"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/timeStampTextViewMyReportedSwarms"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/timeStampTextViewMyReportedSwarms" />

        <TextView
            android:id="@+id/contactTextViewMyReportedSwarms"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:text=""
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/claimantTextViewMyReportedSwarms"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/claimantTextViewMyReportedSwarms"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/claimantTextViewMyReportedSwarms" />

        <TextView
            android:id="@+id/sizeTextViewMyReportedSwarms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Size: The size of a __"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/contactTextViewMyReportedSwarms"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/contactTextViewMyReportedSwarms"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/contactTextViewMyReportedSwarms" />

        <TextView
            android:id="@+id/accessibilityTextViewMyReportedSwarms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Accessibility: __"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/sizeTextViewMyReportedSwarms"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/sizeTextViewMyReportedSwarms"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/sizeTextViewMyReportedSwarms" />

        <Button
            android:id="@+id/cancelSwarmClaimButtonMyReportedSwarms"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bivouac_button"
            android:text="Cancel Claim"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/accessibilityTextViewMyReportedSwarms"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/accessibilityTextViewMyReportedSwarms"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/accessibilityTextViewMyReportedSwarms" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>