<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/swarmImageMyClaims"
            android:layout_width="0dp"
            android:layout_height="196dp"
            android:clickable="true"
            app:srcCompat="@drawable/bee"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/timeStampTextViewMyClaims"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reported: "
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/swarmImageMyClaims"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/reportedByTextViewMyClaims"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reported by: "
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timeStampTextViewMyClaims"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/timeStampTextViewMyClaims"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/timeStampTextViewMyClaims" />

        <TextView
            android:id="@+id/contactReporterTextViewMyClaims"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:text="Reporter doesn't wish to be contacted"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/reportedByTextViewMyClaims"
            app:layout_constraintRight_toRightOf="@+id/reportedByTextViewMyClaims"
            app:layout_constraintTop_toBottomOf="@+id/reportedByTextViewMyClaims" />


        <TextView
            android:id="@+id/sizeTextViewMyClaims"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Size: The size of a __"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/contactReporterTextViewMyClaims"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/contactReporterTextViewMyClaims"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/contactReporterTextViewMyClaims" />

        <TextView
            android:id="@+id/accessibilityTextViewMyClaims"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:text="Accessibility: __"
            android:layout_marginTop="8dp"
            android:paddingBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sizeTextViewMyClaims"
            app:layout_constraintBottom_toTopOf="@+id/deleteReportButton"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/sizeTextViewMyClaims"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/sizeTextViewMyClaims" />

        <TextView
            android:id="@+id/descriptionTextViewMyClaims"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:text="Description: __"
            app:layout_constraintLeft_toLeftOf="@+id/accessibilityTextViewMyClaims"
            app:layout_constraintRight_toRightOf="@+id/accessibilityTextViewMyClaims"
            app:layout_constraintTop_toBottomOf="@+id/accessibilityTextViewMyClaims"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <Button
            android:id="@+id/cancelMyClaimButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bivouac_button"
            android:text="Cancel My Claim"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextViewMyClaims"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/descriptionTextViewMyClaims"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/descriptionTextViewMyClaims"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>